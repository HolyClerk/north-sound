<Application
    x:Class="NorthSound.Client.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:com="clr-namespace:NorthSound.Client.Infrastructure.Commands"
    xmlns:local="clr-namespace:NorthSound.Client"
    StartupUri="Views/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/ResourceDictionaries/TabStyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <com:CloseApplication x:Key="CloseApplication" />
            <com:SwitchWindowState x:Key="SwitchWindowState" />
            <com:MinimizeApplication x:Key="MinimizeApplication" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
