<Application
    x:Class="NorthSound.Client.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:NorthSound.Client">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/ResourceDictionaries/TabStyleDictionary.xaml" />
                <ResourceDictionary Source="Views/ResourceDictionaries/AudioPageDictionary.xaml" />
                <ResourceDictionary Source="Views/ResourceDictionaries/SliderStylesDictionary.xaml" />
                <ResourceDictionary Source="Views/ResourceDictionaries/PlayButtonDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="BackgroundDark" Color="#191f35" />
            <SolidColorBrush x:Key="TopBackgroundDark" Color="#13182c" />
            <SolidColorBrush x:Key="TopBackgroundDark2" Color="#FF303B67" />
            <SolidColorBrush x:Key="HeaderDark" Color="#FF202020" />
            
            <SolidColorBrush x:Key="TitleForeground" Color="#7CFFFFFF" />
            <SolidColorBrush x:Key="AuthorForeground" Color="#4CFFFFFF" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
