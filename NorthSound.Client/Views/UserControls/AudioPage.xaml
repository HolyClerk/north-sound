<UserControl
    x:Class="NorthSound.Client.Views.UserControls.AudioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:NorthSound.Client.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NorthSound.Client.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Background="{StaticResource BackgroundDark}"
    FontFamily="Verdana"
    FontSize="13"
    Foreground="#FF969696"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:AudioPageVM />
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="Background" Value="{StaticResource TopBackgroundDark}" />
            <Setter Property="BorderBrush" Value="{StaticResource TopBackgroundDark}" />
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource TopBackgroundDark}" />
            <Setter Property="BorderBrush" Value="{StaticResource TopBackgroundDark}" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BackgroundDark}" />
            <Setter Property="BorderBrush" Value="{StaticResource BackgroundDark}" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*" MaxWidth="300" />
        </Grid.ColumnDefinitions>

        <Border
            Name="BorderAudio"
            Grid.Row="0"
            Margin="20,20,10,10"
            Padding="5"
            BorderThickness="1"
            CornerRadius="5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="0"
                    VerticalAlignment="Center"
                    Foreground="#4CFFFFFF"
                    Text="" />

                <Grid Grid.Row="1" Grid.Column="0">
                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock
                            Margin="0"
                            VerticalAlignment="Top"
                            Foreground="#7FFFFFFF"
                            Text="{Binding SongViewModel.SelectedSong.Name}" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="0"
                            VerticalAlignment="Bottom"
                            Foreground="#4CFFFFFF"
                            Text="{Binding SongViewModel.SelectedSong.Author}" />
                    </StackPanel>
                </Grid>

                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="30"
                    Height="30"
                    Margin="5"
                    BorderBrush="{StaticResource TopBackgroundDark}"
                    Command="{Binding SongViewModel.PlayCommand}"
                    Style="{DynamicResource PlayButtonStyle}" />

                <Slider
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="15,5"
                    VerticalAlignment="Bottom"
                    IsSelectionRangeEnabled="True"
                    Maximum="12"
                    Minimum="0"
                    SelectionStart="0"
                    Style="{StaticResource SliderStyle}"
                    Value="0" />
            </Grid>

        </Border>

        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="10,20,20,10"
            Padding="5"
            BorderThickness="1"
            CornerRadius="5">

            <Grid Margin="0,15,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="80*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="2"
                    Width="48"
                    Margin="0,5,0,5"
                    HorizontalAlignment="Center"
                    FontSize="9"
                    Foreground="#FF787F8C"
                    Text="Громкость" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="43"
                    Margin="0,5,0,5"
                    HorizontalAlignment="Center"
                    FontSize="9"
                    Foreground="#FF787F8C"
                    Text="Скорость" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="2"
                    Width="64"
                    Margin="0,5,0,5"
                    HorizontalAlignment="Center"
                    FontSize="9"
                    Foreground="#FF787F8C"
                    Text="Эквалайзер 1" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="3"
                    Width="64"
                    Margin="0,5,0,5"
                    HorizontalAlignment="Center"
                    FontSize="9"
                    Foreground="#FF787F8C"
                    Text="Эквалайзер 2" />

                <Slider
                    Grid.Row="1"
                    Maximum="1"
                    Style="{DynamicResource SliderSetStyle}"
                    Value="{Binding SongViewModel.SongVolume, UpdateSourceTrigger=PropertyChanged}" />

                <Slider
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{DynamicResource SliderSetStyle}"
                    Value="1" />

                <Slider
                    Grid.Row="1"
                    Grid.Column="2"
                    Style="{DynamicResource SliderSetStyle}"
                    Value="4" />

                <Slider
                    Grid.Row="1"
                    Grid.Column="3"
                    Style="{DynamicResource SliderSetStyle}"
                    Value="4" />
            </Grid>
        </Border>

        <Border
            Grid.Row="1"
            Grid.ColumnSpan="1"
            Margin="20,10,10,20"
            Padding="0"
            BorderThickness="1"
            CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>


                <TextBox
                    Grid.Row="1"
                    Width="auto"
                    Height="30"
                    Margin="12,12,12,5"
                    Padding="8,0,18,0"
                    VerticalContentAlignment="Center"
                    BorderThickness="0.1"
                    Foreground="#FFA5A5A5"
                    SelectionBrush="#FFA5A5A5"
                    Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8" />
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <fa:ImageAwesome
                    Grid.Row="1"
                    Height="13"
                    Margin="0,8,20,0"
                    HorizontalAlignment="Right"
                    Foreground="Gray"
                    Icon="Solid_Search" />

                <GroupBox
                    Grid.Row="2"
                    Padding="0,10,0,5"
                    HorizontalContentAlignment="Stretch"
                    BorderThickness="0"
                    Foreground="#FFE8E8E8">

                    <ListBox
                        Name="lstCars"
                        HorizontalContentAlignment="Stretch"
                        BorderBrush="#FF1A1A1A"
                        BorderThickness="0,0,0,0"
                        Foreground="#FFE8E8E8"
                        ItemsSource="{Binding PlaylistCollection}"
                        SelectedItem="{Binding SongViewModel.SelectedSong}"
                        VirtualizingPanel.CacheLength="20"
                        VirtualizingPanel.IsContainerVirtualizable="True"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,5">
                                    <Border
                                        Name="MusicBorder"
                                        Grid.Row="1"
                                        BorderThickness="0"
                                        CornerRadius="13">
                                        <Border.Background>
                                            <LinearGradientBrush>
                                                <GradientStop Offset="1" Color="#FF415A96" />
                                                <GradientStop Offset="0" Color="#FF4D738C" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <Border
                                                Grid.Column="0"
                                                Width="40"
                                                Height="40"
                                                Margin="5,5,0,5"
                                                CornerRadius="100">
                                                <Border.Background>
                                                    <LinearGradientBrush>
                                                        <GradientStop Offset="1" Color="#662B2B2B" />
                                                        <GradientStop Offset="0" Color="#66202020" />
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <fa:ImageAwesome
                                                    Name="PlayButtonOcc"
                                                    Width="10"
                                                    Height="10"
                                                    Foreground="#7FFFFFFF"
                                                    Icon="Solid_Play" />
                                            </Border>
                                            <Grid Grid.Column="1" Margin="10,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <TextBlock
                                                    Name="TitleAudio"
                                                    Grid.Row="0"
                                                    VerticalAlignment="Bottom"
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Foreground="#7CFFFFFF"
                                                    Text="{Binding Path=Name}" />

                                                <TextBlock
                                                    Name="AudioAuthor"
                                                    Grid.Row="1"
                                                    VerticalAlignment="Top"
                                                    FontSize="11"
                                                    Foreground="#4CFFFFFF"
                                                    Text="{Binding Path=Author}" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                    <Grid.Triggers>
                                        <EventTrigger RoutedEvent="MouseDown">
                                            <EventTrigger.Actions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            AutoReverse="True"
                                                            Storyboard.TargetName="PlayButtonOcc"
                                                            Storyboard.TargetProperty="Width"
                                                            From="10"
                                                            To="12"
                                                            Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="MouseDown">
                                            <EventTrigger.Actions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            AutoReverse="True"
                                                            Storyboard.TargetName="TitleAudio"
                                                            Storyboard.TargetProperty="FontSize"
                                                            From="12"
                                                            To="14"
                                                            Duration="0:0:0.2" />
                                                        <DoubleAnimation
                                                            AutoReverse="True"
                                                            Storyboard.TargetName="AudioAuthor"
                                                            Storyboard.TargetProperty="FontSize"
                                                            From="11"
                                                            To="13"
                                                            Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                    </Grid.Triggers>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
            </Grid>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,10,20,20"
            Padding="5"
            BorderThickness="1"
            CornerRadius="5">

            <Grid>
                <GroupBox
                    Grid.Row="2"
                    Padding="0,10,0,5"
                    HorizontalContentAlignment="Stretch"
                    BorderThickness="0"
                    Foreground="#FFE8E8E8">

                    <ListBox
                        HorizontalContentAlignment="Stretch"
                        BorderBrush="#FF1A1A1A"
                        BorderThickness="0"
                        Foreground="#FFE8E8E8"
                        ItemsSource="{Binding PlaylistCollection}"
                        SelectedItem="{Binding SongViewModel.SelectedSong}"
                        VirtualizingPanel.CacheLength="20"
                        VirtualizingPanel.IsContainerVirtualizable="True"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <Border
                                            Grid.Column="0"
                                            Width="50"
                                            Height="50"
                                            Margin="5,5,0,5"
                                            CornerRadius="5">
                                            <Border.Background>
                                                <LinearGradientBrush>
                                                    <GradientStop Offset="1" Color="#662B2B2B" />
                                                    <GradientStop Offset="0" Color="#66333333" />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <fa:ImageAwesome
                                                Name="PlayButtonOcc"
                                                Width="25"
                                                Height="320"
                                                Foreground="#7FFFFFFF"
                                                Icon="Solid_Music" />
                                        </Border>
                                        <Grid Grid.Column="1" Margin="10,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Name="TitleAudio"
                                                Grid.Row="0"
                                                VerticalAlignment="Bottom"
                                                FontSize="12"
                                                FontWeight="Bold"
                                                Foreground="#7CFFFFFF"
                                                Text="Плейлист" />

                                            <TextBlock
                                                Name="AudioAuthor"
                                                Grid.Row="1"
                                                VerticalAlignment="Top"
                                                FontSize="11"
                                                Foreground="#4CFFFFFF"
                                                Text="Автор" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
            </Grid>

        </Border>
    </Grid>
</UserControl>
