<UserControl
    x:Class="NorthSound.Client.Views.UserControls.AudioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:NorthSound.Client.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NorthSound.Client.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="13"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:SoundViewModel />
    </UserControl.DataContext>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid
            x:Name="HeaderAudio"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">

            <Grid.Background>
                <RadialGradientBrush>
                    <GradientStop Offset="1" Color="#FF21252E" />
                    <GradientStop Offset="0" Color="#FF2D3544" />
                </RadialGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" DataContext="{Binding SelectedAudio}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="2"
                    VerticalAlignment="Top"
                    Foreground="#FFD2D2D2"
                    Text="{Binding Path=Name}"
                    TextAlignment="Center" />

                <TextBlock
                    Grid.Row="1"
                    Margin="2"
                    VerticalAlignment="Center"
                    Foreground="#FF989898"
                    Text="{Binding Path=Author}"
                    TextAlignment="Center" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Rectangle
                        Width="140"
                        Height="140"
                        Margin="5"
                        Fill="#FF343F56"
                        RadiusX="5"
                        RadiusY="5" />

                    <fa:ImageAwesome
                        Margin="5"
                        HorizontalAlignment="Center"
                        Foreground="#7CA0C4D2"
                        Icon="Solid_Play"
                        Style="{DynamicResource PlayStyle}" />
                </Grid>

                <Slider
                    Grid.Row="1"
                    Margin="200,10"
                    VerticalAlignment="Center"
                    IsSelectionRangeEnabled="True"
                    Maximum="100"
                    Minimum="0"
                    SelectionStart="0"
                    Style="{StaticResource SliderPlayStyle}"
                    Value="1" />
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Background="#FF232831">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <fa:ImageAwesome
                    Height="17"
                    Margin="3"
                    Foreground="#FFA0C4D2"
                    Icon="Solid_Search" />
                <TextBox
                    Width="250"
                    Margin="5"
                    Background="#FF1E2127"
                    BorderBrush="#FF232831"
                    FontSize="14"
                    Foreground="#FFD7DCDE"
                    Text="{Binding FilterText, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

        </Grid>

        <Grid
            x:Name="AudioList"
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#FF232831">
            <GroupBox
                Background="#FF232831"
                BorderThickness="0"
                Foreground="#FFE8E8E8">

                <ListBox
                    Name="lstCars"
                    HorizontalContentAlignment="Stretch"
                    Background="#FF232831"
                    BorderThickness="0"
                    Foreground="#FFE8E8E8"
                    ItemsSource="{Binding AudioPlaylistItems}"
                    SelectedItem="{Binding SelectedAudio}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Border
                                    Grid.Row="1"
                                    Margin="5,0"
                                    BorderBrush="#FFC1C1C1"
                                    BorderThickness="0,0,0,0"
                                    CornerRadius="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>

                                        <Border
                                            Grid.RowSpan="2"
                                            Width="35"
                                            Height="35"
                                            Margin="5,5"
                                            BorderBrush="White"
                                            BorderThickness="0.3"
                                            CornerRadius="0.5" />

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="3,0"
                                            VerticalAlignment="Bottom"
                                            FontSize="12"
                                            FontWeight="Bold"
                                            Foreground="#FFCCCCCC"
                                            Text="{Binding Path=Name}" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="3,0"
                                            VerticalAlignment="Top"
                                            FontSize="11"
                                            Foreground="#FF989898"
                                            Text="{Binding Path=Author}" />

                                        <fa:ImageAwesome
                                            Grid.RowSpan="2"
                                            Grid.Column="2"
                                            Width="15"
                                            Height="15"
                                            Margin="15"
                                            Foreground="#FFA0C4D2"
                                            Icon="Solid_Play"
                                            Style="{DynamicResource PlayStyle}" />
                                    </Grid>
                                </Border>
                            </Grid>

                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
