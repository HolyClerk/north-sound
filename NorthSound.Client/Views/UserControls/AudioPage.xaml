<UserControl
    x:Class="NorthSound.Client.Views.UserControls.AudioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:NorthSound.Client.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NorthSound.Client.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:SoundViewModel />
    </UserControl.DataContext>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid
            x:Name="HeaderAudio"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <TextBlock
                Margin="15"
                VerticalAlignment="Top"
                FontSize="16"
                Foreground="#FFD2D2D2"
                Text="{Binding SelectedAudio.GeneratedTitle}"
                TextAlignment="Center" />

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <fa:ImageAwesome
                    Foreground="#FFEFEFEF"
                    Icon="Regular_PlayCircle"
                    Style="{DynamicResource PlayStyle}" />
            </StackPanel>
            <StackPanel
                Margin="0,0,0,25"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Slider Width="300" Style="{DynamicResource SliderPlayStyle}" />
            </StackPanel>
        </Grid>

        <Grid
            x:Name="AudioList"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <GroupBox
                Background="#121212"
                BorderThickness="0"
                Foreground="#FFE8E8E8">

                <ListBox
                    Name="lstCars"
                    HorizontalContentAlignment="Stretch"
                    Background="#121212"
                    BorderThickness="0"
                    Foreground="#FFE8E8E8"
                    ItemsSource="{Binding AudioPlaylistItems}"
                    SelectedItem="{Binding SelectedAudio}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Border
                                    Margin="0,3"
                                    Padding="2"
                                    BorderBrush="#cf8f8f"
                                    BorderThickness="0.3"
                                    CornerRadius="2">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>

                                        <Border
                                            Grid.RowSpan="2"
                                            Width="50"
                                            Height="50"
                                            Margin="5"
                                            BorderBrush="#cf8f8f"
                                            BorderThickness="0.3"
                                            CornerRadius="1" />

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="8,3"
                                            VerticalAlignment="Center"
                                            FontWeight="Bold"
                                            Foreground="#FFD8D8D8"
                                            Text="{Binding Path=Name}" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="8,3"
                                            VerticalAlignment="Center"
                                            Foreground="#FFB1B1B1"
                                            Text="{Binding Path=Author}" />

                                        <fa:ImageAwesome
                                            Grid.RowSpan="2"
                                            Grid.Column="2"
                                            Width="20"
                                            Height="20"
                                            Margin="15"
                                            Foreground="#FFEFEFEF"
                                            Icon="Solid_Play"
                                            Style="{DynamicResource PlayStyle}" />
                                    </Grid>
                                </Border>
                            </Grid>

                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <!--<ListBox
                    Background="#FF0F0F0F"
                    BorderBrush="#FF292929"
                    BorderThickness="0"
                    DisplayMemberPath="GeneratedTitle"
                    Foreground="#FFCCCCCC"
                    ItemContainerStyle="{DynamicResource ListBoxItemStyle}"
                    ItemsSource="{Binding AudioPlaylistItems}"
                    SelectedItem="{Binding SelectedAudio}" />-->
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
