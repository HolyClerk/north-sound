<Window
    x:Class="NorthSound.Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:NorthSound.Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:NorthSound.Client.Views.UserControls"
    xmlns:vm="clr-namespace:NorthSound.Client.ViewModels"
    Title="{Binding Title}"
    Width="830"
    Height="650"
    MinWidth="800"
    MinHeight="600"
    AllowsTransparency="True"
    Background="{StaticResource TopBackgroundDark}"
    BorderBrush="White"
    FontFamily="Verdana"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="fa:ImageAwesome">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground">
                <Setter.Value>
                    <RadialGradientBrush GradientOrigin="0.3,0.3" RadiusX="0.6" RadiusY="0.8">
                        <GradientStop Offset="1" Color="#FF80C0E4" />
                        <GradientStop Offset="0" Color="#FFBFF2F9" />
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
        </Style>

        <Style x:Key="BarIconsStyle" TargetType="fa:ImageAwesome">
            <Setter Property="Foreground" Value="#FFD7DCDE" />
            <Setter Property="Width" Value="15" />
            <Setter Property="Height" Value="15" />

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Width" Value="21" />
                    <Setter Property="Height" Value="21" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BarTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFD7DCDE" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  HEADER  -->
        <Border
            Grid.Row="0"
            BorderBrush="{StaticResource HeaderDark}"
            BorderThickness="0"
            CornerRadius="0, 0, 11, 11"
            MouseDown="BorderMouseDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="#FF232935" />
                    <GradientStop Offset="1" Color="#FF202020" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="10">
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Center"
                    Style="{StaticResource BarTextStyle}"
                    Text="{Binding Title}" />

                <Grid
                    Margin="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>

                    <fa:ImageAwesome
                        Grid.Column="0"
                        Icon="Solid_WindowMinimize"
                        Style="{StaticResource BarIconsStyle}">
                        <fa:ImageAwesome.InputBindings>
                            <MouseBinding Command="{StaticResource MinimizeApplication}" MouseAction="LeftClick" />
                        </fa:ImageAwesome.InputBindings>
                    </fa:ImageAwesome>

                    <fa:ImageAwesome
                        Grid.Column="1"
                        Icon="Solid_WindowMaximize"
                        Style="{StaticResource BarIconsStyle}">
                        <fa:ImageAwesome.InputBindings>
                            <MouseBinding
                                Command="{StaticResource SwitchWindowState}"
                                CommandParameter="min"
                                MouseAction="LeftClick" />
                        </fa:ImageAwesome.InputBindings>
                    </fa:ImageAwesome>

                    <fa:ImageAwesome
                        Grid.Column="2"
                        Foreground="#FFD25E5E"
                        Icon="Solid_WindowClose"
                        Style="{StaticResource BarIconsStyle}">
                        <fa:ImageAwesome.InputBindings>
                            <MouseBinding Command="{StaticResource CloseApplication}" MouseAction="LeftClick" />
                        </fa:ImageAwesome.InputBindings>
                    </fa:ImageAwesome>
                </Grid>
            </Grid>
        </Border>


        <!--  TABS  -->
        <TabControl
            Grid.Row="1"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Background="{DynamicResource TopBackgroundDark}"
            SelectedItem="{Binding SelectedTabItem}"
            Style="{DynamicResource TabDarkStyle}"
            TabStripPlacement="Left">

            <!--  MAIN  -->

            <!--  MY AUDIO  -->
            <TabItem
                Name="Музыка"
                Margin="0"
                HorizontalContentAlignment="Stretch"
                Style="{DynamicResource TabItemDarkStyle}"
                TabIndex="1">
                <TabItem.Header>
                    <Grid Margin="25,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <fa:ImageAwesome
                            Grid.Column="0"
                            Icon="Solid_Music"
                            Tag="TabIcon" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="15"
                            VerticalAlignment="Center"
                            Text="Моя музыка" />
                    </Grid>
                </TabItem.Header>
                <TabItem.Content>
                    <views:AudioPage
                        FontFamily="Verdana"
                        FontSize="13"
                        FontStyle="Normal" />
                </TabItem.Content>
            </TabItem>

            <!--  LIBRARY  -->
            <TabItem Name="Библиотека" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Margin="25,5,0,5" Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Regular_Bookmark" />
                        <TextBlock
                            Margin="15"
                            VerticalAlignment="Center"
                            Text="Библиотека" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:LibrarySoundPage />
                </TabItem.Content>
            </TabItem>

            <!--  FRIENDS  -->
            <TabItem x:Name="Друзья" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Margin="25,5,0,5" Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Regular_AddressBook" />
                        <TextBlock
                            Margin="15"
                            VerticalAlignment="Center"
                            Text="Друзья" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:FriendsPageUserControl />
                </TabItem.Content>
            </TabItem>

            <!--  MESSAGES  -->
            <TabItem x:Name="Сообщения" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Margin="25,5,0,5" Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Regular_PaperPlane" />
                        <TextBlock
                            Margin="15"
                            VerticalAlignment="Center"
                            Text="Сообщения" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:MessageView />
                </TabItem.Content>
            </TabItem>

            <!--  SETTINGS  -->
            <TabItem x:Name="Настройки" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Margin="25,5,0,5" Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Regular_Map" />
                        <TextBlock
                            Margin="15"
                            VerticalAlignment="Center"
                            Text="Настройки" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:SettingsUserControl />
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
