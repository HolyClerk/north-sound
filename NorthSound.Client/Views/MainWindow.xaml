<Window
    x:Class="NorthSound.Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:NorthSound.Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:NorthSound.Client.Views.UserControls"
    xmlns:vm="clr-namespace:NorthSound.Client.ViewModels"
    d:DataContext="{d:DesignInstance vm:ApplicationViewModel}"
    Title="{Binding Title}"
    Width="830"
    Height="650"
    MinWidth="800"
    MinHeight="600"
    AllowsTransparency="True"
    Background="{StaticResource AllApp}"
    
    BorderBrush="White"
    FontFamily="Verdana"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="fa:ImageAwesome">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush>
                        <GradientStop Offset="1" Color="#f65a5a" />
                        <GradientStop Offset="0" Color="#ff9a9a" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
        </Style>

        <Style x:Key="BarIconsStyle" TargetType="fa:ImageAwesome">
            <Setter Property="Foreground" Value="#FFD7DCDE" />
            <Setter Property="Width" Value="15" />
            <Setter Property="Height" Value="15" />

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Width" Value="21" />
                    <Setter Property="Height" Value="21" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="UserIconsStyle" TargetType="fa:ImageAwesome">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />

            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush>
                        <GradientStop Offset="0" Color="#3B7CF3" />
                        <GradientStop Offset="1" Color="#4AB4F9" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>

            <Setter Property="Width" Value="13" />
            <Setter Property="Height" Value="13" />
        </Style>

        <Style x:Key="BarTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFD7DCDE" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource TopBackgroundDark}" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <!--  ХЕДЕР  -->

        <Border
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="{StaticResource AllApp}"
            MouseDown="BorderMouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <fa:ImageAwesome
                    Grid.Column="1"
                    Width="14"
                    Height="4"
                    VerticalAlignment="Center"
                    Icon="Solid_WindowMinimize">
                    <fa:ImageAwesome.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Offset="1" Color="#FF68E1F1" />
                            <GradientStop Offset="0" Color="#FF989EFF" />
                        </LinearGradientBrush>
                    </fa:ImageAwesome.Foreground>
                </fa:ImageAwesome>

                <fa:ImageAwesome
                    Grid.Column="2"
                    Width="13"
                    Icon="Regular_WindowMaximize">
                    <fa:ImageAwesome.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Offset="1" Color="#FF68E1F1" />
                            <GradientStop Offset="0" Color="#FF989EFF" />
                        </LinearGradientBrush>
                    </fa:ImageAwesome.Foreground>
                </fa:ImageAwesome>

                <fa:ImageAwesome
                    Grid.Column="3"
                    Width="14"
                    Height="12"
                    Icon="Solid_WindowClose">
                    <fa:ImageAwesome.Foreground>
                        <LinearGradientBrush>
                            <GradientStop Offset="1" Color="#FFF16868" />
                            <GradientStop Offset="0" Color="#FFFF98E3" />
                        </LinearGradientBrush>
                    </fa:ImageAwesome.Foreground>
                </fa:ImageAwesome>
            </Grid>
        </Border>

        <!--  ТЕЛО  -->
        <TabControl
            Grid.Row="1"
            Margin="0"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            BorderBrush="#FF8E8E8E"
            Style="{StaticResource TabControlStyle}"
            TabStripPlacement="Left">
            <TabItem Style="{StaticResource TabItemsStyle}">
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <fa:ImageAwesome
                            Grid.Column="0"
                            Icon="Solid_User"
                            Style="{DynamicResource UserIconsStyle}" />
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="Профиль" Margin="5,0,0,0" />
                    </Grid>
                </TabItem.Header>

                <TabItem.Content>
                    <Frame Content="Frame"/>
                </TabItem.Content>
            </TabItem>

            <TabItem Style="{StaticResource TabItemsStyle}">
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <fa:ImageAwesome
                            Grid.Column="0"
                            Icon="Solid_UserFriends"
                            Style="{DynamicResource UserIconsStyle}" />
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="Сообщество" Margin="5,0,0,0" />
                    </Grid>
                </TabItem.Header>
            </TabItem>

            <TabItem Style="{StaticResource TabItemsStyle}">
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <fa:ImageAwesome
                            Grid.Column="0"
                            Icon="Solid_Music"
                            Style="{StaticResource UserIconsStyle}" />
                        
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="Моя музыка" Margin="5,0,0,0" />
                    </Grid>
                </TabItem.Header>

                <TabItem.Content>
                    <views:AudioPage
                        FontFamily="Verdana"
                        FontSize="13" 
                        DataContext="{Binding Current}"/>
                </TabItem.Content>
            </TabItem>

            <TabItem Style="{StaticResource TabItemsStyle}">
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <fa:ImageAwesome Icon="Solid_Book" Style="{StaticResource UserIconsStyle}" />
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="Библиотека" Margin="5,0,0,0" 
                            DataContext="{Binding LibraryVm}"/>
                    </Grid>
                </TabItem.Header>
                <TabItem.Content>
                    <views:LibrarySoundPage
                        FontFamily="Verdana"
                        FontSize="13"
                        FontStyle="Normal" 
                        DataContext="{Binding Current}"/>
                </TabItem.Content>
            </TabItem>

            <TabItem Style="{StaticResource TabItemsStyle}">
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <fa:ImageAwesome Icon="Solid_Circle" Style="{StaticResource UserIconsStyle}" />
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="Настройки" Margin="5,0,0,0" />
                    </Grid>
                </TabItem.Header>
            </TabItem>
        </TabControl>

        <Border
            x:Name="PlayedMusic"
            Grid.Row="2"
            MinHeight="60" Background="{StaticResource Footer}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" MaxWidth="180"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>

                    <Border CornerRadius="10" BorderThickness="3" Background="{StaticResource AuthorForeground}" MaxWidth="43" MaxHeight="43">
                        <fa:FontAwesome Foreground="{StaticResource AuthorForeground}" Icon="Solid_Music" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Margin="0, 5, 0, 0" Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="{Binding PlayerVm.SelectedSong.Name}" FontSize="12" Foreground="{StaticResource TitleForeground}" HorizontalAlignment="Left" />
                        <TextBlock Text="{Binding PlayerVm.SelectedSong.Author}" FontSize="11" Foreground="{StaticResource AuthorForeground}" HorizontalAlignment="Left" />
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Column="2" VerticalAlignment="Center" Orientation="Horizontal" Margin="10, 0">
                    <CheckBox x:Name="checkBox1" IsChecked="{Binding PlayerVm.IsPlaying, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True}" Visibility="Hidden"/>
                    <Button DataContext="{Binding PlayerVm}" Margin="5, 0" VerticalAlignment="Center" Command="{Binding PlayCommand}" CommandParameter="{Binding SelectedSong}" Width="40" HorizontalAlignment="Center" >
                        <Button.Template>
                            <ControlTemplate>
                                <Border x:Name="bord" BorderThickness="0">
                                    <Grid>
                                        <fa:FontAwesome x:Name="PlayIcon" Icon="Solid_Play" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Margin="10" Foreground="{StaticResource Gradient3}"/>
                                        <fa:FontAwesome x:Name="PauseIcon" Icon="Solid_Pause" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Margin="8" Visibility="Collapsed"  Foreground="{StaticResource Gradient3}"/>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger SourceName="bord" Property="IsMouseOver" Value="True">
                                        <Setter TargetName="PlayIcon" Property="Foreground" Value="#fff"/>
                                        <Setter TargetName="PauseIcon" Property="Foreground" Value="#fff"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding ElementName=checkBox1, Path=IsChecked}" Value="True">
                                        <Setter TargetName="PlayIcon" Property="Visibility" Value="Collapsed"/>
                                        <Setter TargetName="PauseIcon" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger  Binding="{Binding ElementName=checkBox1, Path=IsChecked}" Value="False">
                                        <Setter TargetName="PlayIcon" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="PauseIcon" Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Margin="5, 0" VerticalAlignment="Center" Command="{Binding PlayerVm.PreviousSongCommand}" CommandParameter="{Binding PlayerVm.SelectedSong}" HorizontalAlignment="Center" >
                        <Button.Template>
                            <ControlTemplate>
                                <Border x:Name="bord" BorderThickness="0">
                                    <fa:FontAwesome x:Name="PrevIcon" Foreground="{StaticResource Gradient1}" FontSize="20" Icon="Solid_ArrowLeft" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger SourceName="bord" Property="IsMouseOver" Value="True">
                                        <Setter TargetName="PrevIcon" Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Margin="5, 0" VerticalAlignment="Center" Command="{Binding PlayerVm.NextSongCommand}" CommandParameter="{Binding PlayerVm.SelectedSong}" HorizontalAlignment="Center" >
                        <Button.Template>
                            <ControlTemplate>
                                <Border x:Name="bord" BorderThickness="0">
                                    <fa:FontAwesome x:Name="NextIcon" Foreground="{StaticResource Gradient1}" FontSize="20" Icon="Solid_ArrowRight" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger SourceName="bord" Property="IsMouseOver" Value="True">
                                        <Setter TargetName="NextIcon" Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
