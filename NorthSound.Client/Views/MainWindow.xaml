<Window
    x:Class="NorthSound.Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:NorthSound.Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:NorthSound.Client.Views.UserControls"
    xmlns:vm="clr-namespace:NorthSound.Client.ViewModels"
    Title="{Binding Title}"
    Width="830"
    Height="530"
    MinWidth="830"
    MinHeight="530"
    Background="#FF1A1A1A"
    BorderBrush="#FF1A1A1A"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="fa:ImageAwesome">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#8fc0cd" />
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
        </Style>

        <Style x:Key="BarIconsStyle" TargetType="fa:ImageAwesome">
            <Setter Property="Foreground" Value="#FFD7DCDE" />
            <Setter Property="Width" Value="17" />
            <Setter Property="Height" Value="17" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <Style x:Key="BarTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFD7DCDE" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#292929">
            <Grid.InputBindings />
            <TextBlock
                HorizontalAlignment="Center"
                Style="{StaticResource BarTextStyle}"
                Text="{Binding Title}" />

            <StackPanel
                HorizontalAlignment="Right"
                Background="Transparent"
                Orientation="Horizontal">
                <fa:ImageAwesome
                    Width="15"
                    Icon="Regular_WindowMinimize"
                    Style="{StaticResource BarIconsStyle}">
                    <fa:ImageAwesome.InputBindings>
                        <MouseBinding Command="{StaticResource MinimizeApplication}" MouseAction="LeftClick" />
                    </fa:ImageAwesome.InputBindings>
                </fa:ImageAwesome>

                <fa:ImageAwesome
                    Height="14"
                    Icon="Regular_WindowMaximize"
                    Style="{StaticResource BarIconsStyle}">
                    <fa:ImageAwesome.InputBindings>
                        <MouseBinding
                            Command="{StaticResource SwitchWindowState}"
                            CommandParameter="min"
                            MouseAction="LeftClick" />
                    </fa:ImageAwesome.InputBindings>
                </fa:ImageAwesome>

                <fa:ImageAwesome
                    Margin="5,5,10,5"
                    Foreground="#FFD25E5E"
                    Icon="Regular_WindowClose"
                    Style="{StaticResource BarIconsStyle}">
                    <fa:ImageAwesome.InputBindings>
                        <MouseBinding Command="{StaticResource CloseApplication}" MouseAction="LeftClick" />
                    </fa:ImageAwesome.InputBindings>
                </fa:ImageAwesome>
            </StackPanel>
        </Grid>

        <TabControl
            Grid.Row="1"
            Style="{DynamicResource TabDarkStyle}"
            TabStripPlacement="Left">
            <TabItem x:Name="Main" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel>
                        <fa:ImageAwesome
                            Width="30"
                            Height="30"
                            Foreground="#FFCFCD8F"
                            Icon="Solid_Home" />
                        <TextBlock
                            Margin="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Text="Главная страница" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>

            <TabItem x:Name="MyAudio" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Foreground="#cf8f8f" Icon="Solid_Music" />
                        <TextBlock Margin="15" Text="Моя музыка" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:AudioView />
                </TabItem.Content>
            </TabItem>

            <TabItem x:Name="Audio" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Foreground="#cf8f8f" Icon="Regular_Bookmark" />
                        <TextBlock Margin="15" Text="Библиотека" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:AudioView />
                </TabItem.Content>
            </TabItem>

            <TabItem x:Name="Friends" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Foreground="#cf8f8f" Icon="Regular_AddressBook" />
                        <TextBlock Margin="15" Text="Друзья" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:FriendsPageUserControl />
                </TabItem.Content>
            </TabItem>

            <TabItem x:Name="Messages" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Foreground="#cf8f8f" Icon="Regular_PaperPlane" />
                        <TextBlock Margin="15" Text="Сообщения" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:MessageView />
                </TabItem.Content>
            </TabItem>

            <TabItem x:Name="Settings" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Regular_Map" />
                        <TextBlock Margin="15" Text="Настройки" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:SettingsUserControl />
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
