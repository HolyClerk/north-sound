<Window
    x:Class="NorthSound.Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:NorthSound.Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:NorthSound.Client.Views.UserControls"
    xmlns:vm="clr-namespace:NorthSound.Client.ViewModels"
    Title="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
    Width="830"
    Height="530"
    MinWidth="530"
    MinHeight="530"
    AllowsTransparency="True"
    Background="#FF21252E"
    BorderBrush="White"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="fa:ImageAwesome">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#8fc0cd" />
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
        </Style>

        <Style x:Key="BarIconsStyle" TargetType="fa:ImageAwesome">
            <Setter Property="Foreground" Value="#FFD7DCDE" />
            <Setter Property="Width" Value="15" />
            <Setter Property="Height" Value="15" />

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Width" Value="21" />
                    <Setter Property="Height" Value="21" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BarTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFD7DCDE" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  HEADER  -->
        <Border
            Grid.Row="0"
            Background="#FF232323"
            BorderBrush="#FF232323"
            BorderThickness="3"
            CornerRadius="0, 0, 11, 11"
            MouseDown="BorderMouseDown">
            <Grid Margin="3">
                <TextBlock
                    HorizontalAlignment="Center"
                    Style="{StaticResource BarTextStyle}"
                    Text="{Binding Title}" />

                <Grid
                    Margin="2"
                    HorizontalAlignment="Right"
                    Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>

                    <fa:ImageAwesome
                        Grid.Column="0"
                        Icon="Solid_WindowMinimize"
                        Style="{StaticResource BarIconsStyle}">
                        <fa:ImageAwesome.InputBindings>
                            <MouseBinding Command="{StaticResource MinimizeApplication}" MouseAction="LeftClick" />
                        </fa:ImageAwesome.InputBindings>
                    </fa:ImageAwesome>

                    <fa:ImageAwesome
                        Grid.Column="1"
                        Icon="Solid_WindowMaximize"
                        Style="{StaticResource BarIconsStyle}">
                        <fa:ImageAwesome.InputBindings>
                            <MouseBinding
                                Command="{StaticResource SwitchWindowState}"
                                CommandParameter="min"
                                MouseAction="LeftClick" />
                        </fa:ImageAwesome.InputBindings>
                    </fa:ImageAwesome>

                    <fa:ImageAwesome
                        Grid.Column="2"
                        Foreground="#FFD25E5E"
                        Icon="Solid_WindowClose"
                        Style="{StaticResource BarIconsStyle}">
                        <fa:ImageAwesome.InputBindings>
                            <MouseBinding Command="{StaticResource CloseApplication}" MouseAction="LeftClick" />
                        </fa:ImageAwesome.InputBindings>
                    </fa:ImageAwesome>
                </Grid>
            </Grid>
        </Border>


        <!--  TABS  -->
        <TabControl
            Grid.Row="1"
            Margin="0,10,10,10"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Background="#FF292E38"
            SelectedItem="{Binding SelectedTabItem}"
            Style="{DynamicResource TabDarkStyle}"
            TabStripPlacement="Left">

            <!--  MAIN  -->
            <TabItem Name="Главная" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <fa:ImageAwesome
                            Grid.Row="0"
                            Width="30"
                            Height="30"
                            Foreground="#FFBB7575"
                            Icon="Solid_Home"
                            Tag="TabIcon" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="Главная страница" />
                    </Grid>
                </TabItem.Header>
            </TabItem>

            <!--  MY AUDIO  -->
            <TabItem Name="Музыка" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <fa:ImageAwesome
                            Grid.Column="0"
                            Icon="Solid_Music"
                            Tag="TabIcon" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="15"
                            Text="Моя музыка" />
                    </Grid>
                </TabItem.Header>

                <TabItem.Content>
                    <views:AudioPage />
                </TabItem.Content>
            </TabItem>

            <!--  LIBRARY  -->
            <TabItem Name="Библиотека" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Regular_Bookmark" />
                        <TextBlock Margin="15" Text="Библиотека" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:LibrarySoundPage />
                </TabItem.Content>
            </TabItem>

            <!--  FRIENDS  -->
            <TabItem x:Name="Друзья" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Regular_AddressBook" />
                        <TextBlock Margin="15" Text="Друзья" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:FriendsPageUserControl />
                </TabItem.Content>
            </TabItem>

            <!--  MESSAGES  -->
            <TabItem x:Name="Сообщения" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Regular_PaperPlane" />
                        <TextBlock Margin="15" Text="Сообщения" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:MessageView />
                </TabItem.Content>
            </TabItem>

            <!--  SETTINGS  -->
            <TabItem x:Name="Настройки" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Regular_Map" />
                        <TextBlock Margin="15" Text="Настройки" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:SettingsUserControl />
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
