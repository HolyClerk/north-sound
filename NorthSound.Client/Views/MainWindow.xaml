<Window
    x:Class="NorthSound.Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:NorthSound.Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:NorthSound.Client.Views.UserControls"
    xmlns:vm="clr-namespace:NorthSound.Client.ViewModels"
    Title="{Binding Title}"
    Width="830"
    Height="650"
    MinWidth="800"
    MinHeight="600"
    AllowsTransparency="True"
    Background="{StaticResource BackgroundDark}"
    BorderBrush="White"
    FontFamily="Verdana"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="fa:ImageAwesome">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush>
                        <GradientStop Offset="1" Color="#FFBE68F1" />
                        <GradientStop Offset="0" Color="#FFB298FF" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
        </Style>

        <Style x:Key="BarIconsStyle" TargetType="fa:ImageAwesome">
            <Setter Property="Foreground" Value="#FFD7DCDE" />
            <Setter Property="Width" Value="15" />
            <Setter Property="Height" Value="15" />

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Width" Value="21" />
                    <Setter Property="Height" Value="21" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BarTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFD7DCDE" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource TopBackgroundDark}" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--  ХЕДЕР  -->

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="1"
                Margin="5"
                Background="{StaticResource TopBackgroundDark}"
                BorderBrush="{StaticResource TopBackgroundDark}"
                BorderThickness="3"
                CornerRadius="10">
                <Grid Grid.Row="0" Margin="15,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <fa:ImageAwesome
                        Grid.Column="1"
                        Width="17"
                        VerticalAlignment="Center"
                        Icon="Regular_WindowMinimize">
                        <fa:ImageAwesome.Foreground>
                            <LinearGradientBrush>
                                <GradientStop Offset="1" Color="#FFC8E8F9" />
                                <GradientStop Offset="0" Color="#FFFF98E3" />
                            </LinearGradientBrush>
                        </fa:ImageAwesome.Foreground>
                    </fa:ImageAwesome>

                    <fa:ImageAwesome
                        Grid.Column="2"
                        Width="17"
                        Icon="Regular_WindowMaximize">
                        <fa:ImageAwesome.Foreground>
                            <LinearGradientBrush>
                                <GradientStop Offset="1" Color="#FF9268F1" />
                                <GradientStop Offset="0" Color="#FFFF98E3" />
                            </LinearGradientBrush>
                        </fa:ImageAwesome.Foreground>
                    </fa:ImageAwesome>

                    <fa:ImageAwesome
                        Grid.Column="3"
                        Width="17"
                        Icon="Regular_WindowClose">
                        <fa:ImageAwesome.Foreground>
                            <LinearGradientBrush>
                                <GradientStop Offset="1" Color="#FFF16868" />
                                <GradientStop Offset="0" Color="#FFFF98E3" />
                            </LinearGradientBrush>
                        </fa:ImageAwesome.Foreground>
                    </fa:ImageAwesome>
                </Grid>
            </Border>
        </Grid>

        <!--  ТЕЛО  -->
        <TabControl
            Grid.Row="1"
            Margin="10,0,0,0"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            BorderBrush="#FF8E8E8E"
            Style="{StaticResource TabControlStyle}"
            TabStripPlacement="Left">
            <TabItem Style="{StaticResource TabItemsStyle}">
                <TabItem.Header>
                    <Border Style="{DynamicResource BorderStyle}">
                        <Grid Background="{StaticResource TopBackgroundDark}">
                            <fa:ImageAwesome Icon="Solid_Music" />
                        </Grid>
                    </Border>
                </TabItem.Header>

                <TabItem.Content>
                    <views:AudioPage
                        FontFamily="Verdana"
                        FontSize="13"
                        FontStyle="Normal" />
                </TabItem.Content>
            </TabItem>

            <TabItem Style="{StaticResource TabItemsStyle}">
                <TabItem.Header>
                    <Border
                        BorderBrush="{StaticResource TopBackgroundDark}"
                        BorderThickness="3"
                        CornerRadius="5">
                        <Grid Background="{StaticResource TopBackgroundDark}">
                            <fa:ImageAwesome Icon="Solid_Book" />
                        </Grid>
                    </Border>
                </TabItem.Header>
            </TabItem>

            <TabItem Style="{StaticResource TabItemsStyle}">
                <TabItem.Header>
                    <Border Style="{DynamicResource BorderStyle}">
                        <Grid Background="{StaticResource TopBackgroundDark}">
                            <fa:ImageAwesome Icon="Solid_UserFriends" />
                        </Grid>
                    </Border>
                </TabItem.Header>
            </TabItem>

            <TabItem Style="{StaticResource TabItemsStyle}">
                <TabItem.Header>
                    <Border
                        BorderBrush="{StaticResource TopBackgroundDark}"
                        BorderThickness="3"
                        CornerRadius="5">
                        <Grid Background="{StaticResource TopBackgroundDark}">
                            <fa:ImageAwesome Icon="Solid_PaperPlane" />
                        </Grid>
                    </Border>
                </TabItem.Header>
            </TabItem>

            <TabItem Style="{StaticResource TabItemsStyle}">
                <TabItem.Header>
                    <Border Style="{DynamicResource BorderStyle}">
                        <Grid Background="{StaticResource TopBackgroundDark}">
                            <fa:ImageAwesome Icon="Solid_Wheelchair" />
                        </Grid>
                    </Border>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
