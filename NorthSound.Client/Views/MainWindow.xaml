<Window
    x:Class="NorthSound.Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:NorthSound.Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:NorthSound.Client.Views.UserControls"
    xmlns:vm="clr-namespace:NorthSound.Client.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    Background="#263147"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="fa:ImageAwesome">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#8fc0cd" />
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TabControl Style="{DynamicResource TabDarkStyle}" TabStripPlacement="Left">
            <TabItem x:Name="Main" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock
                            Margin="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Главная страница" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:MainUserControl />
                </TabItem.Content>
            </TabItem>

            <TabItem x:Name="Audio" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Foreground="#cf8f8f" Icon="Regular_Heart" />
                        <TextBlock Margin="15" Text="Аудиофайлы" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:AudioView />
                </TabItem.Content>
            </TabItem>

            <TabItem x:Name="Friends" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Foreground="#cf8f8f" Icon="Regular_AddressBook" />
                        <TextBlock Margin="15" Text="Друзья" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:FriendsPageUserControl />
                </TabItem.Content>
            </TabItem>

            <TabItem x:Name="Messages" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Foreground="#cf8f8f" Icon="Regular_PaperPlane" />
                        <TextBlock Margin="15" Text="Сообщения" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:MessageView />
                </TabItem.Content>
            </TabItem>

            <TabItem x:Name="Settings" Style="{DynamicResource TabItemDarkStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Regular_Map" />
                        <TextBlock Margin="15" Text="Настройки" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <views:SettingsUserControl />
                </TabItem.Content>
            </TabItem>
        </TabControl>

        <StatusBar
            Grid.Row="1"
            VerticalAlignment="Center"
            Background="#242d3f"
            Foreground="#e0e0e0">
            <StatusBarItem>
                <TextBlock Margin="5" Text="Что-то" />
            </StatusBarItem>
            <StatusBarItem>
                <ProgressBar />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
